<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preLogin.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@drawable/bg_swim">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="Sign Up"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp"
                    android:layout_gravity="center"
                    >

                <EditText
                    android:id="@+id/registerID"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:background="#85CEDA"
                    android:drawableStart="@drawable/ic_mail_outline"
                    android:drawableLeft="@drawable/ic_mail_outline"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="#ffffff" />


                    <Button
                        android:id="@+id/중복확인버튼"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text="중복확인"
                        android:textSize="10dp"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/registerPW"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#85CEDA"
                    android:drawableStart="@drawable/ic_https"
                    android:drawableLeft="@drawable/ic_https"
                    android:hint="PassWord"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="10dp"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/registerPW2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#85CEDA"
                    android:drawableStart="@drawable/ic_https"
                    android:drawableLeft="@drawable/ic_https"
                    android:hint="P/W Check"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:padding="10dp"
                    android:textColorHint="#ffffff" />

                <EditText
                    android:id="@+id/registerName"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#85CEDA"
                    android:drawableStart="@drawable/ic_person"
                    android:drawableLeft="@drawable/ic_person"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textColorHint="#ffffff" />
<!--
                <RadioGroup
                    android:id="@+id/registerGender"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/registerFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="여성" />

                    <RadioButton
                        android:id="@+id/registerMale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="남성" />
                </RadioGroup>
-->
                <Button
                    android:id="@+id/registerJoinButton"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="join"
                    android:textSize="18dp"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
