<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/icon_more"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@color/design_default_color_primary"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_more_horiz_black_24dp"
        android:drawableRight="@drawable/ic_more_horiz_black_24dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:text="SWIMMERS"
        android:textColor="#E6E6E6"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/layout3"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sizeBoardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="sizeBoardTitle"
                android:maxWidth="300dp"
                android:maxLength="50"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/sizeBoardGrade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_star_black_24dp"
                android:drawableRight="@drawable/ic_star_black_24dp"
                android:gravity="right"
                android:hint="sizeBoardGrade"
                android:paddingRight="5dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/sizeBoardTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sizeBoardTime"
            android:paddingTop="20dp"
            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="글쓴이 정보 :"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="성별　"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/sizeBoardGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="성별"
                        android:textColor="@color/design_default_color_primary"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나이　"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/sizeBoardAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="나이"
                        android:textColor="@color/design_default_color_primary"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="세"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="키　　"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/sizeBoardTall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="키"
                        android:textColor="@color/design_default_color_primary"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cm"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="체중　"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/sizeBoardKg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="체중"
                        android:textColor="@color/design_default_color_primary"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kg"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="토르소"
                        android:textSize="10dp" />

                <TextView
                    android:id="@+id/sizeBoardTorso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="길이"
                    android:textColor="@color/design_default_color_primary"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cm"
                        android:textSize="10dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/design_default_color_primary" />

        <TextView
            android:id="@+id/sizeBoardFit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:text="sizeBoardFit"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="한줄평" />

        <TextView
            android:id="@+id/sizeBoardMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:inputType="textMultiLine"
            android:maxHeight="100dp"
            android:padding="10dp"
            android:text="sizeBoardMemo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:background="@color/design_default_color_primary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/repleRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/backToList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:layout_weight="10"
            android:clickable="true"
            android:drawableStart="@drawable/ic_dehaze_black_24dp"
            android:drawableLeft="@drawable/ic_dehaze_black_24dp"
            android:gravity="center_vertical"
            android:text="  목록으로"
            android:textSize="14dp" />


        <ImageView
            android:id="@+id/icon_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/btn_mypage"
            android:clickable="true"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_forum_black_24dp" />
    </LinearLayout>

</RelativeLayout>