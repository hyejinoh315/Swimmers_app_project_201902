<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EBEBEB">

        <TextView
            android:padding="14dp"
            android:id="@+id/dayCancle"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="취소"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"/>

        <TextView
            android:padding="14dp"
            android:id="@+id/daySave"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="저장"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textColor="@color/design_default_color_primary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_title"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" 제목 (10자 내외로 입력해 주세요) "
            android:maxLength="10"
            android:textColorHint="#DFDFDF"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_clock"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" 이벤트 날짜 (YYYY/MM/DD) "
            android:inputType="date"
            android:textColorHint="#DFDFDF"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_text"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/event_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" 메모 "
            android:inputType="textLongMessage|textMultiLine"
            android:textColorHint="#DFDFDF"
            android:textSize="14dp"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>


</LinearLayout>