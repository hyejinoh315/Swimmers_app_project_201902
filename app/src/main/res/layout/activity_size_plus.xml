<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBEBEB"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sizePlusCancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="14dp"
            android:text="취소"
            android:textColor="@color/design_default_color_primary"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sizePlusSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:padding="14dp"
            android:text="등록"
            android:textColor="@color/design_default_color_primary"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/boardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="monospace"
            android:maxLength="50"
            android:text=" Find Suit Size Board "
            android:textColor="#000000"
            android:textColorHint="#DFDFDF"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="브랜드명"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <Spinner
                    android:id="@+id/sizeBrandName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:inputType="text"
                    android:maxLength="30"
                    android:textColorHint="#DFDFDF"
                    android:textSize="14dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제품명　"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/sizeProductName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint=" 제품명을 입력해 주세요 "
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColorHint="#DFDFDF"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사이즈　"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <EditText
                    android:id="@+id/sizeProductSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint=" 사이즈를 입력해 주세요 (ex. 28 / B10 / XXL ) "
                    android:inputType="text"
                    android:maxLength="3"
                    android:textColorHint="#DFDFDF"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="핏감　　"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <Spinner
                    android:id="@+id/sizeFit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint=" 크기 (작아요 / 적당해요 / 커요) -> 콤보박스 "
                    android:inputType="text"
                    android:maxLength="10"
                    android:textColorHint="#DFDFDF"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평점　　"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <Spinner
                    android:id="@+id/sizeGrade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint=" 평점 (1~5) "
                    android:inputType="number"
                    android:maxLength="1"
                    android:textColorHint="#DFDFDF"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한줄평　"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>


                <EditText
                    android:id="@+id/sizeMemo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint=" 50자 내외로 입력해 주세요 "
                    android:inputType="textLongMessage|textMultiLine"
                    android:maxLength="50"
                    android:textColorHint="#DFDFDF"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>